<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Doodle & Note Board</title>
<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        background: #f9f9f9;
        font-family: Arial, sans-serif;
        user-select: none;
    }

    /* Toolbar styling */
    #toolbar {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        background: #ffffffee;
        padding: 8px 10px;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.2);
        display: flex;
        gap: 8px;
        flex-wrap: wrap; /* wrap buttons on small screens */
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    #toolbar input[type="color"],
    #toolbar input[type="range"],
    #toolbar button {
        cursor: pointer;
        padding: 5px;
        font-size: 14px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background: #fff;
    }

    #toolbar button:hover {
        background: #f0f0f0;
    }

    #toolbar input[type="range"] {
        width: 80px;
    }

    canvas {
        display: block;
        background: #ffffff;
        margin-top: 60px; /* give space for toolbar */
    }

    /* Note styling */
    .note {
        position: absolute;
        background: #fff59d;
        padding: 8px 12px;
        border-radius: 6px;
        cursor: move;
        font-size: 16px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        user-select: text;
        max-width: 200px;
        word-wrap: break-word;
    }
</style>
</head>
<body>

<div id="toolbar">
    <input type="color" id="colorPicker" value="#000000" title="Choose Color">
    <input type="range" id="brushSize" min="2" max="40" value="5" title="Brush Size">
    <button id="eraserBtn">Eraser</button>
    <button id="clearBtn">Clear</button>
    <button id="saveBtn">Save</button>
    <button id="addNoteBtn">Add Note</button>
</div>

<canvas id="canvas"></canvas>

<script>
const canvas = document.getElementById("canvas");
const ctx = canvas.getContext("2d");

// Resize canvas to fill screen below toolbar
function resizeCanvas() {
    const toolbarHeight = document.getElementById('toolbar').offsetHeight + 10;
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight - toolbarHeight;
}
resizeCanvas();
window.addEventListener("resize", resizeCanvas);

// Drawing state
let drawing = false;
let color = document.getElementById("colorPicker").value;
let brush = document.getElementById("brushSize").value;
let erasing = false;

// Toolbar events
document.getElementById("colorPicker").addEventListener("change", e => {
    color = e.target.value;
    erasing = false;
});
document.getElementById("brushSize").addEventListener("change", e => brush = e.target.value);
document.getElementById("eraserBtn").addEventListener("click", () => erasing = true);
document.getElementById("clearBtn").addEventListener("click", () => {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    document.querySelectorAll('.note').forEach(n => n.remove());
});

// Save canvas including notes
document.getElementById("saveBtn").addEventListener("click", () => {
    // Clone canvas
    const tempCanvas = document.createElement('canvas');
    tempCanvas.width = canvas.width;
    tempCanvas.height = canvas.height;
    const tempCtx = tempCanvas.getContext('2d');

    // Copy existing canvas
    tempCtx.drawImage(canvas, 0, 0);

    // Draw notes on canvas
    const notes = document.querySelectorAll('.note');
    notes.forEach(note => {
        const rect = canvas.getBoundingClientRect();
        const x = parseFloat(note.style.left) - rect.left;
        const y = parseFloat(note.style.top) - rect.top;
        tempCtx.fillStyle = "#fdd835"; // same as note background
        tempCtx.fillRect(x, y, note.offsetWidth, note.offsetHeight);
        tempCtx.fillStyle = "#000";
        tempCtx.font = "16px Arial";
        const words = note.textContent.split(" ");
        let line = "";
        let lineHeight = 18;
        let offsetY = 14;
        words.forEach((word) => {
            let testLine = line + word + " ";
            let metrics = tempCtx.measureText(testLine);
            if (metrics.width > note.offsetWidth - 10) {
                tempCtx.fillText(line, x + 5, y + offsetY);
                line = word + " ";
                offsetY += lineHeight;
            } else {
                line = testLine;
            }
        });
        tempCtx.fillText(line, x + 5, y + offsetY);
    });

    const link = document.createElement('a');
    link.download = 'doodle_note.png';
    link.href = tempCanvas.toDataURL();
    link.click();
});

// Drawing functions
function startDrawing(e) {
    drawing = true;
    draw(e);
}
function stopDrawing() {
    drawing = false;
    ctx.beginPath();
}
function draw(e) {
    if (!drawing) return;
    const rect = canvas.getBoundingClientRect();
    let x, y;
    if (e.touches) {
        x = e.touches[0].clientX - rect.left;
        y = e.touches[0].clientY - rect.top;
    } else {
        x = e.clientX - rect.left;
        y = e.clientY - rect.top;
    }

    ctx.lineWidth = brush;
    ctx.lineCap = 'round';
    ctx.strokeStyle = erasing ? '#f9f9f9' : color;

    ctx.lineTo(x, y);
    ctx.stroke();
    ctx.beginPath();
    ctx.moveTo(x, y);
}

// Mouse events
canvas.addEventListener("mousedown", startDrawing);
canvas.addEventListener("mouseup", stopDrawing);
canvas.addEventListener("mousemove", draw);

// Touch events
canvas.addEventListener("touchstart", startDrawing);
canvas.addEventListener("touchend", stopDrawing);
canvas.addEventListener("touchmove", draw);

// Add Note feature
document.getElementById("addNoteBtn").addEventListener("click", () => {
    const text = prompt("Enter your note:");
    if (!text) return;

    const note = document.createElement('div');
    note.className = 'note';
    note.textContent = text;
    note.style.left = '50px';
    note.style.top = '100px';
    document.body.appendChild(note);

    // Dragging
    let offsetX, offsetY, isDragging = false;

    function startDrag(e) {
        isDragging = true;
        const evt = e.touches ? e.touches[0] : e;
        const rect = note.getBoundingClientRect();
        offsetX = evt.clientX - rect.left;
        offsetY = evt.clientY - rect.top;
        note.style.zIndex = 1001;
        e.preventDefault && e.preventDefault();
    }

    function drag(e) {
        if (!isDragging) return;
        const evt = e.touches ? e.touches[0] : e;
        note.style.left = (evt.clientX - offsetX) + 'px';
        note.style.top = (evt.clientY - offsetY) + 'px';
    }

    function endDrag() {
        isDragging = false;
        note.style.zIndex = 1000;
    }

    note.addEventListener('mousedown', startDrag);
    note.addEventListener('touchstart', startDrag);
    document.addEventListener('mousemove', drag);
    document.addEventListener('touchmove', drag);
    document.addEventListener('mouseup', endDrag);
    document.addEventListener('touchend', endDrag);
});
</script>

</body>
</html>
